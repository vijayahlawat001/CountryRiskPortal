<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Country Risk Portal</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-1">
        <div class="container" style="max-width:80% !important;">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Country Risk Portal</a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="float: right !important">
                <ul class="navbar-nav flex-grow-1">
                </ul>
                <p class="nav navbar-text">Hello, @User.Identity.Name!</p>
            </div>
        </div>
    </nav>
    <div class="container body-content" style="max-width:80% !important;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Country Risk Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
